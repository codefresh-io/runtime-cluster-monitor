<% if defined? affinity %>affinity:
  nodeAffinity:
    requiredDuringSchedulingIgnoredDuringExecution:
      nodeSelectorTerms:
      - matchExpressions:
        - key: 'node-type'
          operator: In
          values:
            - <%= affinity %>
tolerations:
  - effect: NoSchedule
    key: nodeType
    operator: Equal
    value: <%= affinity %>
<% end %>
